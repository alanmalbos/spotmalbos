<section class="section has-text-white has-text-centered search">
  <div class="field">
    <h2 class="is-size-5">Search</h2>
    <br />
    <%= form_with url: searches_path, method: :get, local: true do |f| %>
      <p class="control has-icons-right">
        <%= f.text_field :search, class: "input is-medium", type: "text", placeholder: "Albums, Artists or Musics" %>
        <span class="icon is-small is-right">
          <i class="fas fa-search"></i>
        </span>
      </p>
    <% end %>
  </div>
 
  <div class="columns is-multiline is-mobile">
    <% Category.all.each do |category| %>
      <div class="column is-half-mobile is-one-quarter-desktop">
        <%= link_to category do %>  
          <%= image_tag url_for(category.image) %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>