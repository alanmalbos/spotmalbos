<section class="section has-text-white has-text-centered search">
  <div class="field">
    <h2 class="is-size-5">Results</h2>
    <br />
    <%= form_with url: searches_path, method: :get, local: true do |f| %>
      <p class="control has-icons-right">
        <%= f.text_field :search, class: "input is-medium", type: "text", placeholder: "Álbuns, Artistas ou Músicas" %>
        <span class="icon is-small is-right">
          <i class="fas fa-search"></i>
        </span>
      </p>
    <% end %>
  </div>
 
  <%= render "shared/tabs", artists: @artists, songs: @songs, albums: @albums %>
</section>